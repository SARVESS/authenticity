
<link rel="stylesheet" href="/css/user_sign_up.css">
<div id="sign-up-div">
    <h1 id="head-1">Create An Account</h1>
    <hr>
    <form action="/users/create" method = "POST">
      <label class="labels" for="name-1">Name</label>
      <input type="text" id="name-1" name="name" placeholder="Your Name" required>
      <hr>
      <label class="labels" for="email-1">Email</label>
      <input type="email" id="email-1" name="email" placeholder="Your Email" required>
       <hr>
      <label class="labels" for="password-1">Password</label>
      <input type="password" id="password-1" name="password" placeholder="Password" required>
      <hr>
      <label class="labels" for="cf">Confirm Password</label>
      <input type="password" id="cf" name="confirm_password" placeholder="Confirm Password" required>
      <hr>
      <div id="link-div">
          <a href="/users/sign-in"> Instead Login </a>
        <button id="sign-in-button" > Sign Up </button>
     </div>
    </form>

     <div id="google-div">
       <a href="/users/auth/google"> <i class="fab fa-google"></i> Sign In/Sign Up</a>
     </div>
  </div>

  <script src="https://kit.fontawesome.com/41c8fb69c7.js" crossorigin="anonymous"></script>